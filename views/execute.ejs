<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Process Allocation</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        .content {
            padding: 40px;
            margin: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        button {
            padding: 10px 20px;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        #terminateBtn {
            background-color: red;
        }

        #terminateBtn:hover {
            background-color: darkred;
        }

        #runBtn {
            background-color: green;
        }

        #runBtn:hover {
            background-color: darkgreen;
        }

        .navbar {
            background-color: #007bff;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        hr {
            border: none;
            height: 1px;
            background-color: #ccc;
            margin: 20px 0;
        }

        label {
            font-weight: bold;
        }

        h2 {
            color: #333;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <!-- Blue Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="#">Process Allocation</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/test">Resource</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/process">Process</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/alld">Execute</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="content">
        <h2>Resource and Process Data</h2>

        <table>
            <thead>
                <tr>
                    <th>Process</th>
                    <% for( a of data.resources ) { %>
                        <th><%= a.name %> Allocation</th>
                    <% } %>
                    <% for( a of data.resources ) { %>
                        <th><%= a.name %> Max</th>
                    <% } %>
                    <% for( a of data.resources ) { %>
                        <th><%= a.name %> Available</th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% for (let d of data.processes) { %>
                    <tr>
                        <td><%= d.name %></td>
                        <% for( a of d.allocation ) { %>
                            <td><%= a.units %></td>
                        <% } %>
                        <% for( n of d.allocation ) { %>
                            <td><%= n.need %></td>
                        <% } %>
                        <% for( r of data.resources ) { %>
                            <td><%= r.units %></td>
                        <% } %>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <h2>Need Table</h2>
        <table>
            <thead>
                <tr>
                    <th>Process</th>
                    <% for( r of data.resources  ) { %>
                        <th><%= r.name %> Need</th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% for(p of data.processes) { %>
                    <tr>
                        <td><%= p.name %></td>
                        <% for(a of p.allocation ) { %>
                            <td><%= a.need - a.units %></td>
                        <% } %>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <button id="terminateBtn">Terminate All Processes and Resources</button>
        <button id="runBtn" onclick="exe()">Run</button>
        <p id="out"></p>
    </div>

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="e.js"></script>
</body>
</html>
